{
  "name": "ayurvedic-ecommerce-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "client-website", 
    "admin-panel"
  ],
  "scripts": {
    "install-all": "npm install",
    "build-all": "npm run build --workspace=client-website && npm run build --workspace=admin-panel",
    "start-backend": "cd backend && node server.js",
    "start-client": "npm run start --workspace=client-website",
    "start-admin": "npm run start --workspace=admin-panel",
    "build-client": "npm run build --workspace=client-website",
    "build-admin": "npm run build --workspace=admin-panel",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-client\" \"npm run start-admin\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}